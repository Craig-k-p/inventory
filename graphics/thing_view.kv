# View for thing objects that the user has on his/her account

<ThingButton@Button>:
    size: (80, 50)
    size_hint: (None, None)
    font_size: 16
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

<ThingLabel@Label>:
    font_size: 16
    bold: True
    color: app.kv_settings['text color']
    size: (150, 35)
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

<ThingGrid@GridLayout>:
    cols: 2
    size_hint: (1, 1)
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

<ThingInput@TextInput>:
    font_size: 16
    bold: True
    color: app.kv_settings['text color']
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

<ThingAnchor@AnchorLayout>:
    # anchor_x: 'center'
    anchor_y: 'center'
    size_hint: (.9, .9)
    padding: 10
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

<ThingView>:
    name: name
    weight: weight
    val: val
    tags: tags

    cols: 1
    size_hint: (1, 1)
    padding: 10
    spacing: 10
    canvas:
        Color:  
            rgba: random.random(), random.random(), random.random(), .2
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None  # Allow ScrollView to scroll
            height: self.minimum_height  # Allow ScrollView to scroll
            row_default_height: 80  # Prevent things from being on top of each other
            row_force_default: True
            FloatLayout:
                size: (0, 70)
                size_hint: (1, None)
                canvas:
                    Color:  
                        rgba: random.random(), random.random(), random.random(), .2
                    Rectangle:
                        pos: self.pos
                        size: self.size

                GridLayout:
                    cols: 3
                    size: (300, 0)
                    size_hint: (None,1)
                    pos_hint: {'center_x': .5, 'y': 0}
                    spacing: 20
                    padding: 10
                    canvas:
                        Color:  
                            rgba: random.random(), random.random(), random.random(), .2
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    ThingButton:
                        text: 'Delete'
                    ThingButton:
                        text: 'Duplucate'
                    ThingButton:
                        text: 'Move to'

            ThingGrid:
                # Thing Name pair
                ThingAnchor:
                    anchor_x: 'left'
                    width: 180
                    size_hint_x: .4
                    ThingLabel:
                        text: 'Object name:'
                        size_hint: (1, None)  # Allow anchor_x to work
                ThingAnchor:
                    anchor_x: 'left'
                    ThingInput:
                        id: name
                        hint_text: 'my thing'
                        size: (250, 35)
                        size_hint: (1, None)
                      

            ThingGrid:
                # Thing Value pair
                ThingAnchor:
                    anchor_x: 'left'
                    width: 180
                    size_hint_x: .4
                    ThingLabel:
                        text: 'Object initial value:'
                        size_hint: (1, None)  # Allow anchor_x to work
                ThingAnchor:
                    anchor_x: 'left'
                    ThingInput:
                        id: val
                        hint_text: '$0.00'
                        input_filter: 'float'
                        size: (150, 35)
                        size_hint: (1, None)

            ThingGrid:
                # Thing Weight pair
                ThingAnchor:
                    anchor_x: 'left'
                    width: 180
                    size_hint_x: .4
                    ThingLabel:
                        text: 'Object weight:'
                        size_hint: (1, None)  # Allow anchor_x to work
                ThingAnchor:
                    anchor_x: 'left'
                    ThingInput:
                        id: weight
                        hint_text: '0.0 lbs'
                        input_filter: 'float'
                        size: (150, 35)
                        size_hint: (1, None)

            ThingGrid:
                # Thing Tags pair
                ThingAnchor:
                    anchor_x: 'left'
                    width: 180
                    size_hint_x: .4
                    ThingLabel:
                        text: 'Tags:'
                        size_hint: (1, None)  # Allow anchor_x to work
                ThingAnchor:
                    anchor_x: 'left'
                    ThingInput:
                        id: tags
                        hint_text: 'Descriptive tag'
                        size: (250,35)
                        size_hint: (1, None)